<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.mychits.accountdetails"
    android:background="@drawable/b4">


    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/spinner5"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spinner5"
        android:layout_marginTop="197dp"
        android:background="#ffe6e6" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/spinner4"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="53dp"
        android:background="#ffe6e6" />

    <TextView
        android:id="@+id/your"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/spinner4"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="11dp"
        android:layout_toLeftOf="@+id/spinner4"
        android:layout_toStartOf="@+id/spinner4"
        android:text="SENDER"
        android:textColor="#f1f1f1f1"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/your"
        android:layout_alignStart="@+id/your"
        android:layout_alignTop="@+id/spinner5"
        android:layout_marginTop="14dp"
        android:text="RECIVER"
        android:textColor="#f1f1f1f1" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spinner4"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/spinner4"
        android:layout_marginTop="19dp"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="DONE"/>

</RelativeLayout>
